<!-- Start Pager -->
@if (Count > 1)
{
	<div class="clearfix">
		@if (@DisplayOlder)
		{
			<a class="btn btn-primary float-left" href="@GetOlderHref">Older Posts &larr;</a>
		}
		@if (DisplayNewer)
		{
			<a class="btn btn-primary float-right" href="@GetNewerHref">Newer Posts &rarr;</a>
		}
	</div>
	<hr />
}
<!-- End Pager -->